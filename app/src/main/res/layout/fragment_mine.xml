<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/private_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:gravity="center_vertical"
        android:text="私密文章"
        app:layout_constraintEnd_toStartOf="@+id/private_article_num"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/private_article_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="right"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/private_article"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/private_article" />

    <View
        android:id="@+id/h_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#d2d2d2"
        app:layout_constraintEnd_toEndOf="@+id/private_article_num"
        app:layout_constraintStart_toStartOf="@+id/private_article"
        app:layout_constraintTop_toBottomOf="@+id/private_article" />

    <TextView
        android:id="@+id/collect_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:gravity="center_vertical"
        android:text="收藏文章"
        app:layout_constraintEnd_toStartOf="@+id/collect_article_num"
        app:layout_constraintStart_toStartOf="@+id/private_article"
        app:layout_constraintTop_toBottomOf="@+id/h_line1" />

    <TextView
        android:id="@+id/collect_article_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/collect_article"
        app:layout_constraintEnd_toEndOf="@+id/private_article_num"
        app:layout_constraintTop_toTopOf="@+id/collect_article" />
    <View
        android:id="@+id/h_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#d2d2d2"
        app:layout_constraintEnd_toEndOf="@+id/collect_article_num"
        app:layout_constraintStart_toStartOf="@+id/collect_article"
        app:layout_constraintTop_toBottomOf="@+id/collect_article" />

    <TextView
        android:id="@+id/my_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:gravity="center_vertical"
        android:text="我的文集"
        app:layout_constraintEnd_toStartOf="@+id/my_article_num"
        app:layout_constraintStart_toStartOf="@+id/collect_article"
        app:layout_constraintTop_toBottomOf="@+id/h_line2" />

    <TextView
        android:id="@+id/my_article_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/my_article"
        app:layout_constraintEnd_toEndOf="@+id/collect_article_num"
        app:layout_constraintTop_toTopOf="@+id/my_article" />
    <View
        android:id="@+id/h_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:background="#d2d2d2"
        app:layout_constraintTop_toBottomOf="@+id/my_article" />

    <View
        android:id="@+id/h1_line"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:background="#f2f2f2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_article" />

    <TextView
        android:id="@+id/browse_record"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:gravity="center_vertical"
        android:text="浏览记录"
        app:layout_constraintEnd_toEndOf="@+id/my_article_num"
        app:layout_constraintStart_toStartOf="@+id/my_article"
        app:layout_constraintTop_toBottomOf="@+id/h1_line" />

    <View
        android:id="@+id/h_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#d2d2d2"
        app:layout_constraintEnd_toEndOf="@+id/browse_record"
        app:layout_constraintStart_toStartOf="@+id/browse_record"
        app:layout_constraintTop_toBottomOf="@+id/browse_record" />

    <TextView
        android:id="@+id/night_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:gravity="center_vertical"
        android:text="夜间模式"
        app:layout_constraintEnd_toStartOf="@+id/night_mode_switch"
        app:layout_constraintStart_toStartOf="@+id/browse_record"
        app:layout_constraintTop_toBottomOf="@+id/h_line4" />

    <Switch
        android:id="@+id/night_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/night_mode"
        app:layout_constraintEnd_toEndOf="@+id/browse_record"
        app:layout_constraintTop_toTopOf="@+id/night_mode" />
    <View
        android:id="@+id/h_line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#d2d2d2"
        app:layout_constraintEnd_toEndOf="@+id/night_mode"
        app:layout_constraintStart_toStartOf="@+id/night_mode"
        app:layout_constraintTop_toBottomOf="@+id/night_mode" />
    <View
        android:id="@+id/h1_line2"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:background="#f2f2f2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/night_mode"/>
    <TextView
        android:id="@+id/share_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:gravity="center_vertical"
        android:text="分享APP"
        app:layout_constraintEnd_toEndOf="@+id/night_mode_switch"
        app:layout_constraintStart_toStartOf="@+id/night_mode"
        app:layout_constraintTop_toBottomOf="@+id/h1_line2" />

    <View
        android:id="@+id/h_line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#d2d2d2"
        app:layout_constraintEnd_toEndOf="@+id/share_app"
        app:layout_constraintStart_toStartOf="@+id/share_app"
        app:layout_constraintTop_toBottomOf="@+id/share_app" />
    <TextView
        android:id="@+id/help_feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:gravity="center_vertical"
        android:text="帮助反馈"
        app:layout_constraintEnd_toEndOf="@+id/share_app"
        app:layout_constraintStart_toStartOf="@+id/share_app"
        app:layout_constraintTop_toBottomOf="@+id/h_line6" />

    <View
        android:id="@+id/h_line7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#d2d2d2"
        app:layout_constraintEnd_toEndOf="@+id/help_feedback"
        app:layout_constraintStart_toStartOf="@+id/help_feedback"
        app:layout_constraintTop_toBottomOf="@+id/help_feedback" />
    <TextView
        android:id="@+id/grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:gravity="center_vertical"
        android:text="评估APP"
        app:layout_constraintEnd_toEndOf="@+id/help_feedback"
        app:layout_constraintStart_toStartOf="@+id/help_feedback"
        app:layout_constraintTop_toBottomOf="@+id/h_line7" />

    <View
        android:id="@+id/h_line8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="#d2d2d2"
        app:layout_constraintEnd_toEndOf="@+id/grade"
        app:layout_constraintStart_toStartOf="@+id/grade"
        app:layout_constraintTop_toBottomOf="@+id/grade" />
    <View
        android:id="@+id/h1_line3"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:background="#f2f2f2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grade"/>

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="昵称"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_head"
        app:layout_constraintStart_toEndOf="@+id/img_head"
        app:layout_constraintTop_toTopOf="@+id/img_head"
        tools:text="TextView" />


</android.support.constraint.ConstraintLayout>
</ScrollView>